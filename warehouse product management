package practice;

import java.util.Scanner;
import java.util.Vector;

/*
	클래스	| 기본클래스 설계	| 각 물품별 클래스 설계
	설계	| 확장성 고려		| 신제품 추가 시 확장성
	=========================================
		| 메뉴출력	
		| 물품입고	
	기능	| 물품출고	
	동작	| 분류별 출력	
		| 제품별 출력	
		| 총 자산 출력	
*/

//상품
class Goods{
	private String	gName;		//제품명
	private String	gCode;		//제품코드
	private int	gQuantity;	//제품수량
	
	public Goods(){
		
	}
	
	public Goods(String argName, String argCode, int argQuantity){
		
		setName(argName);
		setCode(argCode);
		setQuantity(argQuantity);
		
	}
	private void setName(String argName) {
		gName = argName;
		
	}
	private void setCode(String argCode) {
		gCode = argCode;
		
	}
	private void setQuantity(int argQuantity) {
		gQuantity = argQuantity;
		
	}
	
	String getName() {
		return gName;	
	}
	
	String getCode() {		
		return gCode;		
	}

	int getQuantity() {	
		return gQuantity;	
	}
	
	//Vector T = new Vector();
	//T.add(new Goods);
}

class Menu{
	
	Scanner scan	= new Scanner(System.in);
	Vector CategoryA = new Vector();
	Vector CategoryB = new Vector();
	Vector CategoryC = new Vector();
	
	void Menu(){
		
	}
	//물품 입고
	void Input(int argCheckNum){
		System.out.print("Insert name, code, quantity for Goods\n :");
		switch(argCheckNum){
		case 1:
			CategoryA.add(new Goods(scan.nextLine(),scan.nextLine(),scan.nextInt()));
			break;
		case 2:
			CategoryB.add(new Goods(scan.nextLine(),scan.nextLine(),scan.nextInt()));
			break;
		case 3:
			CategoryC.add(new Goods(scan.nextLine(),scan.nextLine(),scan.nextInt()));
			break;
		}
	}
	
	//물품 출고
	void Output(){
		
	}

	//재고 현황
	void CheckStock(){
		//분류별
		System.out.println("");
		//제품별
		System.out.println("");
		//총 자산
		System.out.println("");
	}
	void CategoryPrt(){
		//분류별 출력
	}
	void GoodsPrt(){
		//제품별 출력
		System.out.println("Name : " + ((Goods)(CategoryA.get(0))).getName());
		System.out.println("Code : " + ((Goods)(CategoryA.get(0))).getCode());
		System.out.println("Quantity : " + ((Goods)(CategoryA.get(0))).getQuantity());
	}
	void TotalQuantityPrt(){
		//총 자산 출력
	}
	

}
public class MainClass {
	public static void main(String args[]){
		
		int		selectNum;
		boolean	flag		= true;
		Scanner scan		= new Scanner(System.in);
		Menu	mn			= new Menu();
		
		while(flag){
			//메뉴 출력
			System.out.println("1.물품 입고 2.물품 출고 3.재고현황");
			selectNum = scan.nextInt();
		
			switch(selectNum){
			case 1:
				//Input
				System.out.println("======<<카테고리>>=====");
				System.out.println("1.categoryA 2.categoryB 3.categoryC");
				mn.Input(scan.nextInt());
				break;
			case 2:
				//Output
				break;
			case 3:
				//CheckStock
				mn.GoodsPrt();
				break;
				default :
					flag = false;
					break;
					
			}
		}
	}
}
