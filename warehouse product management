
//warehouse product management

package practice;

import java.util.Scanner;
import java.util.Vector;

/*
	클래스	| 기본클래스 설계	| 각 물품별 클래스 설계
	설계		| 확장성 고려		  | 신제품 추가 시 확장성
	=========================================
		      | 메뉴출력	
			    | 물품입고	
	기능		| 물품출고	
	동작		| 분류별 출력	
			    | 제품별 출력	
			    | 총 자산 출력	
*/

class Goods{
	
	//변수
	private String gCategori;		// 제품 분류
	private String gCode;			// 제품 코드(제품명)
	
	//생성자
	public Goods(){
		//카테고리 생성
		Vector categoriA	= new Vector();
		Vector categoriB	= new Vector();
		Vector categoriC	= new Vector();
	}
	
	public Goods(String argCategori, String argCode){
		setCode(argCode);
		setCategori(argCategori);
	}
	
	//메소드
	public void setCategori(String argCategori){
		gCategori = argCategori;
	}
	public String getCategori(){
		return gCategori;
	}
	public void setCode(String argCode){
		gCode = argCode;
	}
	public String getCode(){
		return gCode;
	}
}




//메뉴 출력
