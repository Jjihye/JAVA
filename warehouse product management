			super(argCategori, argCode);
			// TODO Auto-generated constructor stub
		}
		
		//메소드 : 기능부분
		
		
	}

	//물품 출고
	class Output{
		
	}

	//재고 현황
	class CheckStock{
		//분류별
		//제품별
		//총 자산
	}
}


